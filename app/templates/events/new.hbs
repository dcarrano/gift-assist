{{outlet}}

<form>
  <div class="form-group">
    <label for="title" class="col-lg-2 control-label">Event Title</label>
    {{input value=model.title id='title'}}
  </div>

  <div class="form-group">
    <label for="url" class="col-lg-2 control-label">Description</label>
    {{input value=model.url id='url'}}
  </div>

  <div class="form-group">
    <label for="topic" class="col-lg-2 control-label">Topic</label>
    {{input value=model.topic id='topic'}}
  </div>

  <div class="form-group">
    <label for="description" class="col-lg-2 control-label">Description</label>
    {{input value=model.description id='description'}}
  </div>

  <div class="form-group">
    Give the button below an action of 'save'!
    <button id="submit" class="btn btn-primary" {{action 'save' model}}>Save</button>
  </div>
</form>
